{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "comma-dangle": 1,
        "no-unused-vars": "warn",
        "no-undef": "warn",
        "no-unexpected-multiline": "warn",
        "prefer-const": "warn",
        "no-empty-function": "off",
        "explicit-module-boundary-types": "off",
        "no-explicit-any": "off",
        "no-var-requires": "off",
        "quotes": ["warn", "double"],
        "quote-props": ["warn", "as-needed"],
        "semi": "warn",
        "no-prototype-builtins": 0,
        "no-empty": 0
    }
}
